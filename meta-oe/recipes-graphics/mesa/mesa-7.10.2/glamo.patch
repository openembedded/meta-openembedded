+void glamoDestroyContext(__DRIcontext *driContextPriv)
+{
+	glamoContextPtr context;
+
+	context = (glamoContextPtr)driContextPriv->driverPrivate;
+	assert(context != NULL);
+
+	if ( context != NULL ) {
