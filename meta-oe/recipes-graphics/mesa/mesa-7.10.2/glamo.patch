+	/* Dispatch to the hardware */
+	glamoDRMStartBurst(gCtx, G3D_STREAM_MODE_0);
+	glamoDRMAddData(gCtx, 0x000f0300, 4);
+	glamoDRMAddBO(gCtx, gCtx->prim.vb_bo);
+	glamoDRMDispatch(gCtx);
+
